<?xml version="1.0" encoding="UTF-8"?>
<prompt>
    <purpose>
        Configure and manage layout design workspace for UI development
    </purpose>

    <context>
        <description>
            This prompt sets up and manages a workspace for layout design,
            providing tools and configurations for efficient UI development.
        </description>
        <workflow_position>
            <phase>Design Development</phase>
            <predecessor>Design System Setup</predecessor>
            <successor>Component Development</successor>
        </workflow_position>
    </context>

    <workspace_setup>
        <directories>
            <directory name="layouts">
                <folder>templates</folder>
                <folder>components</folder>
                <folder>pages</folder>
                <folder>shared</folder>
            </directory>
            <directory name="styles">
                <folder>tokens</folder>
                <folder>themes</folder>
                <folder>utilities</folder>
            </directory>
            <directory name="assets">
                <folder>icons</folder>
                <folder>images</folder>
                <folder>fonts</folder>
            </directory>
        </directories>

        <tools>
            <tool name="design_system">
                <component>Style guide viewer</component>
                <component>Component library</component>
                <component>Token manager</component>
            </tool>
            <tool name="development">
                <component>Hot reloading</component>
                <component>CSS inspector</component>
                <component>Grid overlay</component>
            </tool>
            <tool name="testing">
                <component>Visual regression</component>
                <component>Responsive testing</component>
                <component>A11y checker</component>
            </tool>
        </tools>

        <configurations>
            <config name="editor">
                <setting>Grid guides</setting>
                <setting>Spacing markers</setting>
                <setting>Alignment tools</setting>
            </config>
            <config name="preview">
                <setting>Device frames</setting>
                <setting>Breakpoint indicators</setting>
                <setting>Layout debug mode</setting>
            </config>
            <config name="export">
                <setting>Asset optimization</setting>
                <setting>Code formatting</setting>
                <setting>Documentation gen</setting>
            </config>
        </configurations>
    </workspace_setup>

    <workflow>
        <step name="initialize_workspace">
            <action>Setup workspace structure</action>
            <tasks>
                <task>Create directories</task>
                <task>Configure tools</task>
                <task>Setup environment</task>
            </tasks>
        </step>

        <step name="configure_tools">
            <action>Configure development tools</action>
            <tools>
                <tool>Code editor settings</tool>
                <tool>Preview configurations</tool>
                <tool>Build tools setup</tool>
            </tools>
        </step>

        <step name="setup_templates">
            <action>Prepare layout templates</action>
            <templates>
                <template>Grid systems</template>
                <template>Component layouts</template>
                <template>Page structures</template>
            </templates>
        </step>

        <step name="integration_setup">
            <action>Configure integrations</action>
            <integrations>
                <integration>Version control</integration>
                <integration>Design tools</integration>
                <integration>Build pipeline</integration>
            </integrations>
        </step>
    </workflow>

    <validation>
        <criteria>
            <criterion>Directory structure</criterion>
            <criterion>Tool configurations</criterion>
            <criterion>Template setup</criterion>
            <criterion>Integration status</criterion>
        </criteria>
    </validation>

    <documentation>
        <sections>
            <section>Workspace setup</section>
            <section>Tool configurations</section>
            <section>Best practices</section>
            <section>Workflow guides</section>
        </sections>
    </documentation>
</prompt> 